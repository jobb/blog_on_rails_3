<% title "Post" %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<p>
  <strong>Published:</strong>
  <%= @post.published %>
</p>

<p>
  <%= link_to("Edit", edit_post_path(@post)) if can?(:update, @post) %> 
  <%= link_to("Destroy", @post, :confirm => 'Are you sure?', :method => :delete) if can?(:destroy, @post) %> 
  <%= link_to "View All", posts_path %>
</p>
